{% extends 'base.html.twig' %}

{% block metatitle %}Tag | Task manager{% endblock %}

{% block body %}
    <h1>Tableau des tags</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de la salle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('app_tag_show', {'id': tag.id}) }}" class="btn bg-info text-white mb-2 mt-2">Voir</a>
                    <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn bg-warning text-white mb-2 mt-2">Modifier</a>
                    <a href="{{ path('app_tag_delete', {'id': tag.id}) }}" class="btn bg-danger text-white mb-2 mt-2" >Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tag_new') }}" class="btn bg-success text-white mb-2 mt-2">Ajouter un tag</a>
{% endblock %}
